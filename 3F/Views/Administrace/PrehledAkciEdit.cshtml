@model _3F.Web.Models.Administration.EditEventViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">Editace akce @Model.Name</h4>
</div>
<div class="box-content">
    <div class="box-content box-statistic">

        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.Label("Typ akce", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.EventType, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.Label("Stav akce", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Uložit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>