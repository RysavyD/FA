@model _3F.Web.Models.Administration.PostAccessViewModel

<div class="modal-header">  
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>  
    <h4 class="modal-title" id="myModalLabel">Práva k článku @Model.Name</h4>  
</div>
<div class="box-content">
    <div class="box-content box-statistic">

        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <div class="col-md-6">
                        <div style="margin: 10px;">
                            @Html.Label("Práva na zobrazení")
                            @foreach (var item in Model.AvailableViewRights)
                            {
                                <div>
                                    @Html.ChekboxWithName("SelectedViewRights", item)
                                    @Html.LabelFor(x => item.Value, item.Text)
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div style="margin: 10px;">
                            @Html.Label("Práva na editaci")
                            @foreach (var item in Model.AvailableEditRights)
                            {
                                <div>
                                    @Html.ChekboxWithName("SelectedEditRights", item)
                                    @Html.LabelFor(x => item.Value, item.Text)
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-12">
                        <input type="submit" value="Uložit" class="btn btn-success" />                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>