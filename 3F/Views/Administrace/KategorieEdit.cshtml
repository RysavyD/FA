@model _3F.BusinessEntities.EventCategory

<div class="modal-header">  
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>  
    <h4 class="modal-title" id="myModalLabel">Editace kategorie</h4>  
</div>
<div class="box-content">
    <div class="box-content box-statistic">

        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.Label("Název", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ItemNeeded()
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Popis", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MainCategory, new { htmlAttributes = new { @class = "form-control" } })
                        <div>
                            @Html.ItemNeeded()
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Uložit" class="btn btn-default" />                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>