@model _3F.Web.Models.EventModels.OrganisatorMessage

@{
    Layout = "~/Views/Shared/_FullPageLayout.cshtml";
}

<h3>Zaškrtnutím vyberte, kterým účastníkům chcete poslat vzkaz</h3>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Přijdu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Prijdu)
                @Html.ValidationMessageFor(model => model.Prijdu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Možná", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Mozna)
                @Html.ValidationMessageFor(model => model.Mozna, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Rezervace", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Rezervace)
                @Html.ValidationMessageFor(model => model.Rezervace, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Náhradník", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Nahradnik)
                @Html.ValidationMessageFor(model => model.Nahradnik, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nepotvrzená rezervace", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.NepotvrzenaRezervace)
                @Html.ValidationMessageFor(model => model.NepotvrzenaRezervace, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Odhlášen po termínu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.PoTerminu)
                @Html.ValidationMessageFor(model => model.PoTerminu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Rezervace propadla", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.RezervacePropadla)
                @Html.ValidationMessageFor(model => model.RezervacePropadla, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Text zprávy", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" }, style = "width:80%; height: 150px;" })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top:15px;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Odeslat vzkaz" class="btn btn-success" style="margin-left:10px; margin-right:10px;" />
            <a href="@Url.Content("~/Akce/Detail/" + Model.HtmlName)" class="btn btn-primary">
                Zpět na akci
            </a>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
}

@Html.FormSubmitWaitDialog()