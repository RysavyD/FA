@model _3F.Web.Models.Akce.RefundaceViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">Refundace pro uživatele @Model.UserName</h4>
</div>
<div class="box-content">
    <div class="box-content box-statistic">
        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.HiddenFor(model => model.EventHtml)
                @Html.HiddenFor(model => model.UserHtml)
                <div class="form-group">
                    @Html.Label("Částka k refundace", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-12">
                        <input type="submit" value="Vložit" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
