@model _3F.Web.Models.PhotoAlbumPhotos

@{
    Layout = "~/Views/Shared/_FullPageLayout.cshtml";
}


<div class="box-content box-statistic">
    <div class="gallery">
        <ul class="list-unstyled list-inline">
            @foreach (var photo in Model.Photos)
            {
                <li>
                    <div class="picture">
                        <a href="@photo.Image" data-lightbox="flatty">
                            <img src="@photo.Thumbnail" />
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

@using (Html.BeginHtmlBlocks())
{
    <!-- Discussion -->
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-content">
                    @Html.Partial("~/Views/Shared/_DiscussionItems.cshtml")
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <link href="~/Content/Plugins/Lightbox/lightbox.css" media="screen" rel="stylesheet" type="text/css">
    <script src="~/Scripts/plugins/lightbox/lightbox.min.js" type="text/javascript"></script>
    @Html.DiscussionScripts(Model.Id_Discussion)
}